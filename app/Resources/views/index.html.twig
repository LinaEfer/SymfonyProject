{% extends 'base.html.twig' %}

{% block body %}
    <h1>Series list</h1>
    <div class="container">
        <div class="col-xs-4">
        {% for s in series %}
            <div class="panel panel-default">
                <div class="panel-heading" id="{{ s.id }}">
                    {{ s.name }}
                       {% if is_granted('ROLE_USER') %}
                           <button type="submit" class="btn pull-right plus-btn btn-info"><a href="{{ path('episode_info', {'series_name': s.name }) }}">Info </a></button>
                       {% endif %}
                </div>
                <div class="panel-body">
                    <h4>Detail :</h4>
                    Author : {{ s.author }} <br />
                    {% if s.description != null %}
                        Description : {{ s.description }} <br />
                    {% endif %}
                    <br />
                    <!--div class="text-center">
                        <button id="{{s.id}}/1" type="button" class="btn btn-primary">Episodes</button>
                    </div>-->
                    <br />
                    <div id="{{s.id}}/2">
                        <p><b>Episodes :</b></p>
                        {% for e in episodes %}
                            {% if e.tvSeries == s.id %}
                                <p class="center">{{ e.episodeNumber }} - {{ e.name }}<p/>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="col-lg-4">
            <button type="submit" class="btn pull-right btn-block btn-primary"><a href="{{ path('create_serie') }}">Create new TvSerie </a></button>
            <button type="submit" class="btn pull-right btn-block btn-primary"><a href="{{ path('create_episode') }}">Create new Episode </a></button>
        </div>
    </div>
{% endblock %}

    